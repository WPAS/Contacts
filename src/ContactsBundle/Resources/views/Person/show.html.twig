{% extends "::base.html.twig" %}

{% block body %}
    {{ parent() }}
    <p>{{ person.firstName }} {{ person.lastName }}</p>
    <p>{{ person.description }}</p>
    <h3>Adres:</h3>
    {% for address in person.addresses %}
        <p>{{ address.city }}</p>
        <p>
            ul. {{address.street}} {{address.house}}{% if address.flat is not null %}/{{address.flat}}{% endif %}
        </p>
        <a href="{{ path('deleteAddress', {'id': address.id}) }}">Usuń ten adres</a>
    {% endfor %}
    <h3>Telefon:</h3>
    {% for phone in person.phones %}
        <p>{{ phone.number }} - {{ phone.type }}</p>
        <a href="{{ path('deletePhone', {'id': phone.id}) }}">Usuń ten numer</a>
    {% endfor %}
    <h3>Email:</h3>
    {% for email in person.emails %}
        <p>{{ email.email }} - {{ email.type }}</p>
        <a href="{{ path('deleteEmail', {'id': email.id}) }}">Usuń ten adres email</a>
    {% endfor %}
    <div>
        <a href="{{ path('modify', {'id': person.id}) }}">Zmień lub uzupełnij dane</a>
    </div>
{% endblock %}
