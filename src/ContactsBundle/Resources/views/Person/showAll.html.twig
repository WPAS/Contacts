{% extends "::base.html.twig" %}

{% block flash %}
    {% for flashMessage in app.session.flashBag.get('notice') %}
        <div class="flash-notice button large expanded success">
            {{ flashMessage }}
        </div>
    {% endfor %}
{% endblock %}
{% block body %}
    {{ parent() }}
    <ul class="no-bullet text-center">
        {% for person in persons %}
            <div class="row">
                <li class="small-8 small-offset-2 columns">
                    <div class="large-4 columns">
                        <h5 class="large-text-left">{{person.lastName}} <a href="{{ path('show', {'id': person.id}) }}">{{ person.firstName }}</a></h5>
                    </div>
                    <div class="large-4 columns">
                        <a href="{{ path('modify', {'id': person.id}) }}" class="button small warning">Zmień dane</a>
                        <a href="{{ path('delete', {'id': person.id}) }}" class="button small alert">Usuń osobę</a>
                    </div>
                </li>
            </div>
         {% endfor %}
    </ul>
    <div class="row">
        <div class="small-6 small-offset-3 columns">
            <a href="{{ path('new') }}" class="button large expanded">Dodaj nową osobę</a>
        </div>
    </div>
{% endblock %}